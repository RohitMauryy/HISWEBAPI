<?xml version="1.0" encoding="utf-8" ?>
<log4net>

	<!-- INFO Appender -->
	<appender name="InfoAppender" type="log4net.Appender.RollingFileAppender">
		<file type="log4net.Util.PatternString" value="%property{LogPath}Info/" />
		<datePattern value="yyyy-MM-dd'.log'" />
		<appendToFile value="true" />
		<rollingStyle value="Date" />
		<staticLogFileName value="false" />
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
		<immediateFlush value="true" />
		<preserveLogFileNameExtension value="true" />
		<layout type="log4net.Layout.PatternLayout">
			<!-- Structured multi-line format -->
			<conversionPattern value="Date/Time      : %date%nThread ID      : [%thread]%nLog Level      : %-5level%nClass Name     : %logger%nFile Name/Line : %file:%line%nMessage        : %message%n------------------------------------------------------------%n" />
		</layout>
		<filter type="log4net.Filter.LevelRangeFilter">
			<levelMin value="INFO" />
			<levelMax value="INFO" />
		</filter>
	</appender>

	<!-- WARN Appender -->
	<appender name="WarnAppender" type="log4net.Appender.RollingFileAppender">
		<file type="log4net.Util.PatternString" value="%property{LogPath}Warn/" />		
		<datePattern value="yyyy-MM-dd'.log'" />
		<appendToFile value="true" />
		<rollingStyle value="Date" />
		<staticLogFileName value="false" />
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
		<immediateFlush value="true" />
		<preserveLogFileNameExtension value="true" />
		<layout type="log4net.Layout.PatternLayout">
			<!-- Structured multi-line format -->
			<conversionPattern value="Date/Time      : %date%nThread ID      : [%thread]%nLog Level      : %-5level%nClass Name     : %logger%nFile Name/Line : %file:%line%nMessage        : %message%n------------------------------------------------------------%n" />
		</layout>
		<filter type="log4net.Filter.LevelRangeFilter">
			<levelMin value="WARN" />
			<levelMax value="WARN" />
		</filter>
	</appender>

	<!-- ERROR Appender -->
	<appender name="ErrorAppender" type="log4net.Appender.RollingFileAppender">
		<file type="log4net.Util.PatternString" value="%property{LogPath}Error/" />		
		<datePattern value="yyyy-MM-dd'.log'" />
		<appendToFile value="true" />
		<rollingStyle value="Date" />
		<staticLogFileName value="false" />
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
		<immediateFlush value="true" />
		<preserveLogFileNameExtension value="true" />
		<layout type="log4net.Layout.PatternLayout">
			<!-- Structured multi-line format -->
			<conversionPattern value="Date/Time      : %date%nThread ID      : [%thread]%nLog Level      : %-5level%nClass Name     : %logger%nFile Name/Line : %file:%line%nMessage        : %message%n------------------------------------------------------------%n" />
		</layout>
		<filter type="log4net.Filter.LevelRangeFilter">
			<levelMin value="ERROR" />
			<levelMax value="ERROR" />
		</filter>
	</appender>

	<!-- Root logger -->
	<root>
		<level value="DEBUG" />
		<appender-ref ref="InfoAppender" />
		<appender-ref ref="WarnAppender" />
		<appender-ref ref="ErrorAppender" />
	</root>

</log4net>
